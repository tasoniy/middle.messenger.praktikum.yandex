fields:
  - nameField: "Почта"
    value: "pochta@pochta.ru"
    type: "email"
  - nameField: "Логин"
    value: "ivaninav"
    type: "text"
  - nameField: "Имя"
    value: "Ванька"
    type: "text"
  - nameField: "Фамилия"
    value: "Ванькин"
    type: "text"
  - nameField: "Имя в чате"
    value: "Вано"
    type: "text"
  - nameField: "Телефон"
